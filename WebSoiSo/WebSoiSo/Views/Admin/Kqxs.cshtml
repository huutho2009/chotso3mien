@using WebSoiSo.Models
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Data Tables
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <button type="button" class="btn btn-block btn-success btn-lg" onclick="window.location.href='/Admin/TaoKQXS'">Tạo KQXS</button>
                    </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Khu vực</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Ngày xổ</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Ngày tạo</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Người tạo</th>
                                            @*<th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">CSS grade</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if ((List<CS_AdminGetKQXSResult>)ViewBag.ListKQXS != null)
                                        {
                                            foreach (var item in (List<CS_AdminGetKQXSResult>)ViewBag.ListKQXS)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.KhuVuc</td>
                                                    <td>@item.NgayXo.Value.ToShortDateString()</td>
                                                    <td>@item.DateCreated.Value.ToShortDateString()</td>
                                                    <td>@item.UserCreated</td>
                                                    <td class="col-sm-2">
                                                        @if (item.Added == 0)
                                                        {
                                                            @Html.ActionLink("Thêm", "CapNhatKQXS", "Admin", new {id=item.Id, name="them" },new {@class= "btn btn-block btn-info btn-sm" })
                                                        }
                                                        else
                                                        {
                                                            @Html.ActionLink("Cập nhật", "CapNhatKQXS", "Admin", new { id = item.Id, name = "capnhat" }, new { @class = "btn btn-block btn-info btn-sm" })
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">Khu vực</th>
                                            <th rowspan="1" colspan="1">Ngày xổ</th>
                                            <th rowspan="1" colspan="1">Người tạo</th>
                                            <th rowspan="1" colspan="1">Ngày tạo</th>
                                            @*<th rowspan="1" colspan="1">CSS grade</th>*@
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
