@using WebSoiSo.Models
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<form class="form-horizontal" id="frmCreate" action="~/Admin/TaoKQXS" method="post" role="form">
    <div class="box-body">
        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label">Khu vực</label>  @*for="inputEmail3"*@
            <div class="col-sm-5">
                <select class="form-control" id="cboKhuVuc" name="khuvuc">
                    @foreach (var item in (List<SelectListItem>)ViewBag.ListArea)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label">Ngày xổ</label>  @*for="inputPassword3"*@
            <div class="col-sm-5">
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control pull-right" id="dtpNgayXo" name="NgayXo" value="@ViewBag.NgayXo">
                </div>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label">Ngày tạo</label>
            <div class="col-sm-5">
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control pull-right" id="dtpNgayTao" name="DateCreated" value="@ViewBag.DateCreated">
                </div>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label for="inputPassword3" class="col-sm-2 control-label">Người tạo</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="inputNguoiTao" name="UserCreated" value="@ViewBag.UserCreated">
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-5">
                <button type="submit" name="submit" value="cancel" class="btn btn-lg btn-default">Hủy</button>
                <button type="button" id="btnSave" name="submit" value="save" class="btn btn-lg btn-success pull-right">Lưu</button>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
    <!-- /.box-footer -->
    <br>
    <div class="box-body" id="lstError"></div>
</form>

